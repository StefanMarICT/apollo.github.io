body {
  padding-top: 56px;
}

.card {
	overflow-x: hidden;
}

.card img { 
  height: 200px;
  width: auto !important;
  display: block;
  margin: 0 auto;
}

.card img.img-fluid {
  height: 500px;
}

body > .container {
  min-height: 100vh;
}

.carousel-item{
  height: 500px;
  overflow-y: hidden;
}

.carousel-item img{
  width: 100%;
  transform: translateY(-175px);
}
datalist {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  writing-mode: vertical-lr;
  width: 200px;
}

option {
  padding: 0;
}

input[type="range"] {
  width: 200px;
  margin: 0;
}

.loading { 
 width: 100%; 
 height: 100vh; 
 background-color: #fff; 
 @include flexProperty(row, center,center);
 position: fixed; 
 z-index: 1000; 
 top: 0; 
 left: 0; 
 img { 
 width: 25%; 
 } 
 }